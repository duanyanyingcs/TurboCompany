.query {
	width: 100%;
	display: flex;
	padding: 20rpx 20rpx;
	align-items: center;
	background-color: #fff;
}

.query .left {
	flex: 1;
	display: flex;
	align-items: center;
	background-color: #f8f8f8;
	padding: 10rpx 20rpx;
	border-radius: 30rpx;
	font-size: 24rpx;
}

.query .left .icon-search {
	color: #999;
	font-size: 30rpx;
	margin-right: 20rpx;
	font-weight: bold;
}

.query .left input {
	width: 100%;
}


.query .right {
	padding: 0 0rpx 0 20rpx;
	display: flex;
	color: #999;
	font-size: 28rpx;
	justify-content: center;
}