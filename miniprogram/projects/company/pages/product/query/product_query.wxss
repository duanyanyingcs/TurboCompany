@import "../../../../../style/public/comm_box_list.wxss";
@import "../../../style/skin.wxss";
@import "../../tpls/query/query.wxss";

.comm-list-box .item-leftbig1 .leftbig-left {
	border-top-left-radius: 30rpx !important;
	border-bottom-right-radius: 30rpx !important;
	border-bottom: 6rpx solid var(--projectCompareColor)
}



.list {
	width: 100%;
	display: flex;
	flex-wrap: wrap;
	margin-top: 10rpx;
	flex-direction: column;
}

.list .item {
	width: 100%;
	padding: 10rpx 20rpx;
}

.list .item .inner {
	width: 100%;
	display: flex;
	justify-content: flex-start;
	align-items: flex-start;
	background-color: #fff;
	padding: 20rpx 20rpx;
	border-radius: 10rpx;
	overflow: hidden;
}

.list .item .inner>image {
	width: 200rpx;
	height: 200rpx;
	border-radius: 10rpx;
}

.list .item .inner .right {
	flex: 1;
	display: flex;
	flex-direction: column; 
	justify-content: space-between;
	height: 200rpx;
	margin-left: 20rpx;
	overflow: hidden;
}

.list .item .inner .right .title {
	width: 100%;
	font-size: 30rpx;
	color: #000;
	padding: 0rpx 0rpx;
	text-align: left;
}

.list .item .inner .right .desc {
	width: 100%;
	font-size: 24rpx;
	color: #999; 
}